<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionItem">
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>


    <style name="EdittextLayout" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>

        <item name="colorAccent">@color/black</item>

        <item name="colorControlNormal">#000</item>

        <item name="colorControlActivated">#000</item>

    </style>



    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/hint_color</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/bottom_gray</item>
        <item name="fontFamily">@font/googlesans_medium</item>
    </style>


    <style name="text_hint_style" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColorHint">@color/hint_edittext_color</item>
        <item name="android:textSize">@dimen/hint_edit_text_size</item>
        <item name="fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="normal_qty_auto_edit_style" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/hint_edittext_color</item>

        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="fontFamily">@font/opensans_regular</item>
    </style>


    <style name="heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/edit_text_size</item>

        <item name="fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="drawer_text_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/orange_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="large_heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/large_heading_size</item>
        <item name="fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="normal_heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/twenty_16sp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="product_title_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/twenty_16sp</item>

        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="small_heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/bottom_gray</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="very_small_heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/very_small_size</item>
        <item name="android:textColor">@color/bottom_gray</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="large_regular_heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/large_heading_size</item>
        <item name="fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="list_item_status_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/list_black_item</item>
        <item name="fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="gray_small_heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/list_black_item</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="very_large_heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/fourty_40sp</item>
        <item name="fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="big_heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/Heading_text_size</item>
        <item name="fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="home_option_heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="home_option_desabled_heading_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/desabled_text_size</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="small_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/hint_edittext_color</item>
        <item name="fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="product_sans_small_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/hint_edittext_color</item>
        <item name="fontFamily">@font/product_sans_italic</item>
    </style>

    <style name="tnc_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/hint_color</item>
    </style>

    <style name="loan_list_orange_text_style" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/googlesans_regular</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/hint_color</item>
    </style>


    <style name="btn_style" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/backTransparent</item>
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/hint_edittext_color</item>
        <item name="android:textSize">@dimen/list_black_item</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="btn_add_sec_style" parent="Base.Widget.AppCompat.Button">
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">@dimen/desabled_text_size</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="btn_orange_style" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/orange_text_size</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="checkbox_style" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SeekBarWithoutSteps" parent="Base.Widget.AppCompat.SeekBar">

    </style>


    <color name="hint_edittext_color">@color/colorPrimary</color>
    <dimen name="twenty_16sp">12sp</dimen>





</resources>
